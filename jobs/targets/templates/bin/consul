#!/bin/bash
set -eu
source /var/vcap/jobs/targets/helpers/utils targets consul
export LANG=en_US.UTF-8

case $1 in
  start)
    pid_guard $PIDFILE $TARGET
    echo $$ > $PIDFILE
    exec chpst -u vcap:vcap consul agent \
      -bind 0.0.0.0 \
      -client 0.0.0.0 \
      -dev
    ;;

  stop)
    kill_and_wait $PIDFILE
    ;;

  *)
    echo "Usage: $TARGET {start|stop}"
    ;;

esac
exit 0
