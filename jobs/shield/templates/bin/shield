#!/bin/bash
set -eu
source /var/vcap/jobs/shield/helpers/utils shield
export LANG=en_US.UTF-8

case $1 in
  start)
    pid_guard $PIDFILE shield
    if [[ ! -f $STORE_DIR/key ]]; then
      chpst -u vcap:vcap ssh-keygen -t rsa -f $STORE_DIR/key -N ''
    fi

    mkdir -p /var/vcap/store/shield/
    chown vcap:vcap /var/vcap/store/shield/
    shield-schema -d /var/vcap/store/shield/main.db

    echo $$ > $PIDFILE
    exec chpst -u vcap:vcap shieldd \
      --config $JOB_DIR/config/shield.conf
    ;;

  stop)
    kill_and_wait $PIDFILE
    ;;

  *)
    echo "Usage: shield {start|stop}"
    ;;

esac
exit 0
